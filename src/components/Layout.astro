---
const { title, description, canonical } = Astro.props;
const url = canonical ?? Astro.url;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />

    <title>{title}</title>
    {description ? <meta name="description" content={description} /> : null}
    <link rel="canonical" href={url.toString()} />

    <meta name="generator" content={Astro.generator} />

    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <header class="site">
      <div class="container">
        <div class="row">
          <div>
            <a href="/" style="font-weight:700; color: var(--text);">DialCode</a>
            <div class="small">International calling codes + dial builder</div>
          </div>
          <nav>
            <a href="/dial-builder/">Dial Builder</a>
            <a href="/about-data/">About the data</a>
          </nav>
        </div>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer>
      <div class="container">
        <div class="small">
          Static-first (no per-click servers). Data is versioned in the repo. This is an MVP â€” country rules will improve over time.
        </div>
      </div>
    </footer>
  </body>
</html>
