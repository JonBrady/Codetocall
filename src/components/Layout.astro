---
import AdSlot from './AdSlot.astro';
import AdSenseHead from './AdSenseHead.astro';
import { ADS_RENDER } from '../lib/adsense';

const { title, description, canonical } = Astro.props;
const url = canonical ?? Astro.url;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <title>{title}</title>
    {description ? <meta name="description" content={description} /> : null}
    <link rel="canonical" href={url.toString()} />

    <meta name="generator" content={Astro.generator} />

    <!-- Social cards -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    {description ? <meta property="og:description" content={description} /> : null}
    <meta property="og:url" content={url.toString()} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    {description ? <meta name="twitter:description" content={description} /> : null}

    <meta name="theme-color" content="#fffdf8" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Time.is uses Montserrat for most text, and a custom clock font (TimeTraveler) for the big digits.
         We can match the feel with Montserrat + a heavy Montserrat weight for the hero number. -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800;900&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="/styles/global.css?v=20260301-0043" />

    <AdSenseHead />

    <!-- Basic schema.org (site identity) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'WebSite',
      name: 'CodeToCall',
      url: url.origin,
    })} />
  </head>
  <body>
    <header class="site">
      <div class="container">
        <div class="row">
          <div>
            <a href="/" class="brand" id="brandHome" aria-label="CodeToCall home">
              <span class="brandCode">Code</span><span class="brandTo">to</span><span class="brandCall">Call</span>
            </a>
            <div class="small">International dialing, made simple</div>
          </div>
          <nav>
            <a href="/dial-builder/">Dial Builder</a>
            <a href="/about-data/">About</a>
            <a href="/privacy-policy/">Privacy</a>
            <a href="/contact/">Contact</a>
          </nav>
        </div>
      </div>
    </header>

    <main class="container">
      {/* Top ad slot */}
      {ADS_RENDER ? (
        <div style="margin: 14px 0 18px;">
          <AdSlot name="top" minHeight={110} />
        </div>
      ) : null}

      <slot />

      {/* Mid ad slot */}
      {ADS_RENDER ? (
        <div style="margin: 22px 0 10px;">
          <AdSlot name="mid" minHeight={280} />
        </div>
      ) : null}
    </main>

    <footer>
      <div class="container">
        {ADS_RENDER ? (
          <div style="margin: 0 0 18px;">
            <AdSlot name="bottom" minHeight={110} />
          </div>
        ) : null}
        <div class="btnRow footerNav" style="margin: 0 0 12px;">
          <a class="btn footerBtn" href="/" aria-label="Back to homepage">← Home</a>
          <a class="btn footerBtn" href="/dial-builder/" aria-label="Open dial builder">Dial Builder</a>
        </div>
        <div class="small">
          © {new Date().getFullYear()} CodeToCall · International dialing helper ·
          <a href="/about-data/">About</a> · <a href="/privacy-policy/">Privacy</a> · <a href="/terms/">Terms</a>
        </div>
      </div>
    </footer>
  </body>
</html>
